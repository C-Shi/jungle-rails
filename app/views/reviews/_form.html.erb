<%= form_for [@product, @review], url: "/products/#{@product.id}/reviews" do |form| %>
          <p>
            <%= form.label :rating %>
            <%= form.text_field :rating %>
          </p>

          <p>
            <%= form.label :description %>
            <%= form.text_area :description %>
          </p>

          <p>
            <%= form.submit %>
          </p>
        <% end %>